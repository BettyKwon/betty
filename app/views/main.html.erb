<div style="margin:0;padding:0;background-color:#eceef0">
	<div class="container">
		<div class="navbar" style="margin-bottom:0">
			<div class="navbar-inner">
				<%# logo %>
				<a class="brand" href="/" style="padding-left:0px"><%= image_tag "logo2.gif" %>&nbsp;&nbsp;SNUTeacher.com</a>

				<%# login menu bar %>
				<%= form_for("user", :url => user_session_path, :html => {:class => "navbar-form pull-right", :style => "margin-top:15px;padding-right:0px"}) do |f| %>
				  <%= f.text_field :login, :placeholder => "아이디", :class => "input-small" %>
				  <%= f.password_field :password, :placeholder => "비밀번호", :class => "input-small"  %>
				  <%# f.check_box :remember_me %>
				  <%# f.label :remember_me, "자동로그인" %>
				  <%= f.submit '로그인', :class => "btn btn-primary" %>
					<button type="submit" class="btn">아이디/비번찾기</button>
				<% end %>
			</div>
		</div>
	</div>
</div>